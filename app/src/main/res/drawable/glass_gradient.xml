<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer with blur effect simulation -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/glass_dark"
                android:centerColor="@color/glass"
                android:endColor="@color/glass_dark"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Top highlight layer for glass effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Border layer for definition -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/glass_border" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list> 